<% if (title) { %>
  <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/account/register" method="POST">
  <div class="form-group">
    <label for="account_firstname">First Name*</label>
    <input 
      type="text" 
      id="account_firstname" 
      name="account_firstname" 
      class="form-control" 
      required
      pattern="[A-Za-z]+"
      title="Only letters are allowed"
      value="<%= locals.account_firstname %>">
    >
  </div>

  <div class="form-group">
    <label for="account_lastname">Last Name*</label>
    <input 
      type="text" 
      id="account_lastname" 
      name="account_lastname" 
      class="form-control" 
      required
      pattern="[A-Za-z]+"
      title="Only letters are allowed"
      value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>"
    >
  </div>

  <div class="form-group">
    <label for="account_email">Email*</label>
    <input 
      type="email" 
      id="account_email" 
      name="account_email" 
      class="form-control" 
      required
      value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
    >
  </div>

  <div class="form-group password-toggle">
    <label for="account_password">Password*</label>
    <input 
      type="password" 
      id="account_password" 
      name="account_password" 
      class="form-control" 
      minlength="12"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      title="Must contain at least 12 characters, including 1 uppercase, 1 number, and 1 special character"
    >
    <button type="button" class="toggle-password">ğŸ‘ï¸</button>
  </div>

  <div class="password-requirements">
    <p><strong>Password must:</strong></p>
    <ul>
      <li>Be at least 12 characters</li>
      <li>Include 1 uppercase letter (A-Z)</li>
      <li>Include 1 number (0-9)</li>
      <li>Include 1 special character (!@#$%^&*)</li>
    </ul>
  </div>

  <button type="submit" class="btn btn-primary">Register</button>
</form>

<%- include('../partials/footer') %>

