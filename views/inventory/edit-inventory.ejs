
<main>
    <%# Unit 4, Assignment 4, Task 2 %>
    <% if (title) {%>
      <h1><%= title %></h1>
      <%} else {res.redirect('/')} %>
      
      <%- messages() %>
      
      <% if (errors) { %>
      <ul class="message warning">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
      </ul>
      <% } %>
      <form action="/inv/update" method="post" class="inventory-form" id="updateForm">
        <div class="form-group new-form">
          <label for="classificationList">Classification:</label>
          <%- classificationSelect %>
        </div>
        <div class="form-group">
          <label for="inv_make">Make:</label>
          <input
            type="text"
            id="inv_make"
            name="inv_make"
            required
            placeholder="Enter make"
            value="<%= locals.inv_make || '' %>"
            aria-required="true"
          >
        </div>
        <div class="form-group">
          <label for="inv_model">Model:</label>
          <input
            type="text"
            id="inv_model"
            name="inv_model"
            required
            placeholder="Enter model"
            value="<%= locals.inv_model || '' %>"
            aria-required="true"
          >
        </div>
        <div class="form-group">
          <label for="inv_description">Description:</label>
          <textarea
            id="inv_description"
            name="inv_description"
            required
            placeholder="Enter description"
            aria-required="true"
          ><%= locals.inv_description || '' %></textarea>
        </div>
        <div class="form-group">
          <label for="inv_image">Image Path:</label>
          <input
            type="text"
            id="inv_image"
            name="inv_image"
            required
            placeholder="/images/vehicles/no-image.png"
            value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>"
            aria-required="true"
          >
        </div>
        <div class="form-group">
          <label for="inv_thumbnail">Thumbnail Path:</label>
          <input
            type="text"
            id="inv_thumbnail"
            name="inv_thumbnail"
            required
            placeholder="/images/vehicles/no-image-tn.png"
            value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
            aria-required="true"
          >
        </div>
        <div class="form-group">
          <label for="inv_price">Price:</label>
          <input
            type="number"
            id="inv_price"
            name="inv_price"
            required
            min="0"
            step="0.01"
            placeholder="Enter price"
            value="<%= locals.inv_price || '' %>"
            aria-required="true"
          >
        </div>
        <div class="form-group">
          <label for="inv_year">Year:</label>
          <input
            type="number"
            id="inv_year"
            name="inv_year"
            required
            min="1900"
            max="<%= new Date().getFullYear() + 1 %>"
            placeholder="Enter year"
            value="<%= locals.inv_year || '' %>"
            aria-required="true"
          >
        </div>
        <div class="form-group">
          <label for="inv_miles">Miles:</label>
          <input
            type="number"
            id="inv_miles"
            name="inv_miles"
            required
            min="0"
            placeholder="Enter miles"
            value="<%= locals.inv_miles || '' %>"
            aria-required="true"
          >
        </div>
        <div class="form-group">
          <label for="inv_color">Color:</label>
          <input
            type="text"
            id="inv_color"
            name="inv_color"
            required
            placeholder="Enter color"
            value="<%= locals.inv_color || '' %>"
            aria-required="true"
          >
        </div>
        <button type="submit" class="submit---btn">Update Inventory</button>
        <!-- hidden data -->
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
        
      </form>
    </main>
    <script src="../../js/inv-update.js"></script>
    